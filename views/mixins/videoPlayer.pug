mixin videoPlayer(video= {})
    .videoPlayer_wrap
        .videoPlayer#jsVideoPlayer
            video(src=`/${video.src}`)
            .videoPlayer_controls
                .videoPlayer_column
                    span#jsVolumeBtn
                        i.fas.fa-volume-up
                    span
                        |00:00 / 10:00
                .videoPlayer_column
                    span#jsPlayBtn
                        i.fas.fa-play
                .videoPlayer_column
                    span#jsExpandBtn
                        i.fas.fa-expand