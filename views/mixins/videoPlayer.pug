mixin videoPlayer(video= {})
    .videoPlayer_wrap
        .videoPlayer#jsVideoPlayer
            video(src=`/${video.src}`)
            .videoPlayer_controls  
                .videoPlayer_column     
                    span#jsVolumeBtn
                        i.fas.fa-volume-up
                    input.videoPlayer_volume#jsVolume(type="range",min="0",max="1",step="0.1",value="0.5")
                    span
                        span#currentTime 00:00:00
                        |/ 
                        span#totalTime 00:00:00      
                .videoPlayer_column
                    span#jsPlayBtn
                        i.fas.fa-play

                .videoPlayer_column
                    span#jsExpandBtn
                        i.fas.fa-expand

                .videoPlayer_timebar
                input.videoPlayer_time#jsVideoTime(type="range",min="0",max="100",step="1",value="0")   