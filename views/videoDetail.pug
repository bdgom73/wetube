extends layouts/main.pug

block content
    .video_player
        video(src=`/${video.fileUrl}`,controls=true,width="640px")
    .video_info
        a(href=routes.editVideo(video.id)) Edit Video
        h5.video_title=video.title 
        span.video_views=video.views 
        p.video_desc=video.description
    